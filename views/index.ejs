<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login-registration</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
</head>
<body>
   
    <button type="button" class="btn btn-secondary" onclick="removeSignUp()">Login</button>
    <button type="button" class="btn btn-secondary" onclick="removeLogin()" ><a href='/SignUp'>signup</a></button>
    
    <form action="" id="authForm" method="">

        <input type="email" name="email" id="email" placeholder="Email">
        <input type="password" name="password" id="password" placeholder="password">
        <button type="button" class="btn btn-secondary" id="Login" onclick="submitForm('login')">Login</button>
        <button type="button" class="btn btn-secondary" id="Signup" style="display: none;" onclick="submitForm('signup')">SignUp</button>
    </form>
    
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>

    <script>
        function removeLogin(){
            document.getElementById('Login').style.display="none";
            document.getElementById('Signup').style.display="inline";
            document.getElementById('Signup').style.width="10%";
            document.getElementById('autForm').method="GET";
        }
        function removeSignUp(){
            document.getElementById('Signup').style.display="none";
            document.getElementById('Login').style.display="inline";
            document.getElementById('Login').style.width="10%";
            document.getElementById('autForm').method="GET";
        }

        function submitForm(actionType) {
        // Get the form element
        var form = document.getElementById('authForm');

        // Set the action attribute based on the user's action
        if (actionType === 'login') {
            form.action = '/login'; // Set your login route
        } else if (actionType === 'signup') {
            form.action = '/signup'; // Set your signup route
        }

        // Submit the form
        form.submit();
    }
    </script>
</body>
</html>